<%= form_with(model: pin, local: true) do |form| %>
  <% if pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="form-group">
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name,  :class=> 'form-control' %>
      </div>
    </div>
<div class="form-group">
  <div class="field">
    <%= form.label :photo %>
    <%= form.text_field :photo, id: :pin_photo, :class=> 'form-control' %>
  </div>
</div>
    <div class="form-group">
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :pin_description, :class=> 'form-control' %>
  </div>
</div>
<!-- agregar este div para arreglar lo de crear pins-->
    <div class="form-group">
      <div class="field">
        <% @pins.each do |pin| %>
         <%= hidden_field_tag :user_id, pin.user.id %>
            <%= form.hidden_field :user_id, value: pin.user.id %>

            <% end %>

      </div>
    </div>



    <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
